# ───────── UI Controls ─────────
number:
  - platform: template
    name: "HRV Filter Days Remaining"
    id: hrv_filter_days_remaining
    min_value: 0
    max_value: 365
    step: 1
    optimistic: true
    restore_value: yes
    set_action:
      - lambda: |-
          id(hrv_days_remaining) = (int)x;
          id(hrv_filter_days_remaining).publish_state(id(hrv_days_remaining));
          id(hrv_filter_life).publish_state(round(id(hrv_days_remaining)*100.0/365.0));
      - mqtt.publish:
          topic: "hassio/hrv/filter_days_remaining/state"
          payload: !lambda 'return to_string(id(hrv_days_remaining));'
          qos: 1
          retain: true
      - mqtt.publish:
          topic: "hassio/hrv/filter_life/state"
          payload: !lambda 'return to_string(round(id(hrv_days_remaining)*100.0/365.0));'
          qos: 1
          retain: true
      - mqtt.publish:
          topic: "hassio/hrv/filter_replacement_needed"
          payload: !lambda 'return id(hrv_days_remaining) <= 0 ? "ON" : "OFF";'
          qos: 1
          retain: true

button:
  - platform: template
    name: "HRV Filter Reset"
    icon: "mdi:restart"
    on_press:
      - lambda: |-
          id(hrv_days_remaining) = 365;
          id(hrv_filter_days_remaining).publish_state(365);
          id(hrv_filter_life).publish_state(100);
      - mqtt.publish:
          topic: "hassio/hrv/filter_days_remaining/state"
          payload: "365"
          qos: 1
          retain: true
      - mqtt.publish:
          topic: "hassio/hrv/filter_life/state"
          payload: "100"
          qos: 1
          retain: true
      - mqtt.publish:
          topic: "hassio/hrv/filter_replacement_needed"
          payload: "OFF"
          qos: 1
          retain: true

binary_sensor:
  - platform: template
    name: "HRV Filter Replacement Needed"
    id: hrv_filter_replacement_needed
    device_class: problem
    lambda: |-
      return id(hrv_days_remaining) <= 0;

  - platform: template
    name: "HRV Keypad On Off State"
    id: hrv_keypad_on
    device_class: power  
    lambda: |-
      // returns true (ON) when fan speed > 0, false (OFF) when fan speed == 0
      return id(hrv_fan_speed).state > 0;
     


switch:
  - platform: template
    name: "HRV Second Unit Enabled"
    id: second_enabled_switch
    optimistic: true
    restore_mode: RESTORE_DEFAULT_OFF
    turn_on_action:
      - lambda: |-
          id(second_enabled) = true;
    turn_off_action:
      - lambda: |-
          id(second_enabled) = false;

# ───────── Scripts ─────────
script:
  - id: hrv_process_uart
    then:
      - lambda: |-
          static std::vector<uint8_t> frame;
          while (id(hrv_uart).available()) {
            uint8_t b; id(hrv_uart).read_byte(&b);
            if (frame.empty()) {
              if (b == 0x7E) frame.push_back(b);
              continue;
            }
            frame.push_back(b);
            if (frame.back() == 0x7E && frame.size() >= 7) {
              size_t cks = frame.size() - 2;
              int sum = 0;
              for (size_t i = 1; i < cks; ++i) sum -= frame[i];
              if ((uint8_t)(sum & 0xFF) == frame[cks]) {
                uint8_t t = frame[1];
                uint8_t sensor_id = frame[2];
                if (sensor_id == 2 && !id(second_enabled)) {
                  id(second_enabled) = true;
                  id(second_enabled_switch).publish_state(true);
                }
                if (sensor_id == 1 || (sensor_id == 2 && id(second_enabled))) {
                  auto &last_ht = sensor_id == 1 ? id(last_house_temp) : id(last_house_temp_2);
                  auto &ts_ht   = sensor_id == 1 ? id(ts_house)       : id(ts_house_2);
                  auto &last_rt = sensor_id == 1 ? id(last_roof_temp) : id(last_roof_temp_2);
                  auto &ts_rt   = sensor_id == 1 ? id(ts_roof)        : id(ts_roof_2);
                  auto &last_fs = sensor_id == 1 ? id(last_fan_speed) : id(last_fan_speed_2);
                  auto &ts_fs   = sensor_id == 1 ? id(ts_fan)         : id(ts_fan_2);
                  auto &last_sp = sensor_id == 1 ? id(last_setpoint)  : id(last_setpoint_2);
                  auto &ts_sp   = sensor_id == 1 ? id(ts_setpoint)    : id(ts_setpoint_2);

                  if (t == 0x31 && frame.size() == 10) {
                    float tmp = ((frame[2] << 8) | frame[3]) * 0.0625f;
                    if (tmp >= 0 && tmp <= 45) {
                      last_ht = round(tmp * 10) / 10.0f;
                      ts_ht = millis();
                      if (sensor_id == 1) id(hrv_house_temp).publish_state(last_ht);
                      else id(hrv_house_temp_2).publish_state(last_ht);
                    }
                    int fan = frame[4];
                    if (fan >= 0 && fan <= 100) {
                      last_fs = fan;
                      ts_fs = millis();
                      if (sensor_id == 1) id(hrv_fan_speed).publish_state(fan);
                      else id(hrv_fan_speed_2).publish_state(fan);
                    }
                    int sp = frame[5];
                    if (sp >= 14 && sp <= 30) {
                      last_sp = sp;
                      ts_sp = millis();
                      if (sensor_id == 1) id(hrv_setpoint).publish_state(sp);
                      else id(hrv_setpoint_2).publish_state(sp);
                    }
                  }
                  else if (t == 0x30 && frame.size() == 7) {
                    float tmp = ((frame[2] << 8) | frame[3]) * 0.0625f;
                    if (tmp >= 0 && tmp <= 45) {
                      last_rt = round(tmp * 10) / 10.0f;
                      ts_rt = millis();
                      if (sensor_id == 1) id(hrv_roof_temp).publish_state(last_rt);
                      else id(hrv_roof_temp_2).publish_state(last_rt);
                    }
                  }
                }
              }
              frame.clear();
            }
            if (frame.size() > 24) frame.clear();
          }

  - id: zero_stale_check
    then:
      - lambda: |-
          uint32_t now = millis(), to = id(sensor_timeout_ms);
          if (now - id(ts_house) > to) id(hrv_house_temp).publish_state(0);
          if (now - id(ts_roof)  > to) id(hrv_roof_temp).publish_state(0);
          if (now - id(ts_fan)   > to) id(hrv_fan_speed).publish_state(0);
          if (now - id(ts_setpoint) > to) id(hrv_setpoint).publish_state(0);
          if (now - id(ts_house_2) > to) id(hrv_house_temp_2).publish_state(0);
          if (now - id(ts_roof_2)  > to) id(hrv_roof_temp_2).publish_state(0);
          if (now - id(ts_fan_2)   > to) id(hrv_fan_speed_2).publish_state(0);
          if (now - id(ts_setpoint_2) > to) id(hrv_setpoint_2).publish_state(0);

interval:
  - interval: 80ms
    then:
      - script.execute: hrv_process_uart
  - interval: 5s
    then:
      - script.execute: zero_stale_check
  - interval: 24h
    then:
      - lambda: |-
          if (id(hrv_days_remaining) > 0) id(hrv_days_remaining)--;
          id(hrv_filter_days_remaining).publish_state(id(hrv_days_remaining));
          id(hrv_filter_life).publish_state(round(id(hrv_days_remaining)*100.0/365.0));
      - mqtt.publish:
          topic: "hassio/hrv/filter_days_remaining/state"
          payload: !lambda 'return to_string(id(hrv_days_remaining));'
          qos: 1
          retain: true
      - mqtt.publish:
          topic: "hassio/hrv/filter_life/state"
          payload: !lambda 'return to_string(round(id(hrv_days_remaining)*100.0/365.0));'
          qos: 1
          retain: true
      - mqtt.publish:
          topic: "hassio/hrv/filter_replacement_needed"
          payload: !lambda 'return id(hrv_days_remaining)<=0?"ON":"OFF";'
          qos: 1
          retain: true
