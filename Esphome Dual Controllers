    accuracy_decimals: 0

  - platform: template
    name: "HRV Filter Life"
    id: hrv_filter_life
    unit_of_measurement: "%"
    icon: "mdi:air-filter"
    accuracy_decimals: 0
    lambda: |-
      return (int)round(id(hrv_days_remaining) * 100.0f / 365.0f);

