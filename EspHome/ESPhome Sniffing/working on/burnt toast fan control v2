          id(last_tx).publish_state(s);

  # Start holding at 100%: periodic keepalive + watchdog
  - platform: template
    name: "Burnt Toast HOLD (start)"
    on_press:
      - lambda: |-
          id(burnt_hold) = true;
          // send one immediately so we don't wait for the next tick
          auto u = id(bus);
          std::vector<uint8_t> body{0x31,0x01,0x50,0x64,0x1E,0x84,0xF0};
          std::vector<uint8_t> f{0x7E}; f.insert(f.end(), body.begin(), body.end());
          int sum=0; for(size_t i=1;i<f.size(); ++i) sum -= f[i];
          f.push_back((uint8_t)sum); f.push_back(0x7E);
          std::string s; char tmp[4];
          for (auto v: f){ sprintf(tmp,"%02X ",v); s+=tmp; u->write_byte(v); }
          id(last_tx).publish_state(s);
          id(last_ack_ms) = millis();

  - platform: template
    name: "Burnt Toast HOLD (stop)"
    on_press:
      - lambda: |-
          id(burnt_hold) = false;

  # Full re-handshake on demand
  - platform: template
    name: "Re-Handshake (36/38/46 gated)"
    on_press:
      - script.execute: rehandshake
