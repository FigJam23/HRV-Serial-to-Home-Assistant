esphome:
  name: hrv
  friendly_name: HRV

  # Start at 10% after components are up
  on_boot:
    priority: -10
    then:
      - delay: 500ms
      - lambda: |-
          id(target_percent) = 10;
          id(last_nonzero_percent) = 10;
          id(fan_percent).publish_state(10);  // sync the slider
          id(send_fan).execute();             // send immediately

